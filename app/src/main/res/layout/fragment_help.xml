<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help and Support"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Section 1: FAQs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/faq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequently Asked Questions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/faq_question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: How can I register to vote using the E-Voting app?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/faq_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: To register, simply open the app, go to the registration section, and follow the on-screen instructions. You will need to provide your personal information and proof of eligibility to complete the registration process."
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/faq_question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q: Can I change my vote after submitting it?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/faq_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A: No, once you submit your vote, it is final and cannot be changed. Make sure to review your choices carefully before confirming your vote."
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <!-- Section 2: Contact Us -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/contact_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: support@evotingapp.com"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: +251 0000000000"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:id="@+id/footer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2022 E-Voting App. All rights reserved."
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="16dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>